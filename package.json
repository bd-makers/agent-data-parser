{
  "name": "@bdmakers/agent-data-parser-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Agent Data Parser - React Native and Web message parser library",
  "workspaces": [
    "packages/core",
    "packages/renderers",
    "packages/react-native",
    "packages/web"
  ],
  "scripts": {
    "build": "npm run build:renderers && npm run build:core && npm run build:react-native && npm run build:web",
    "build:core": "npm run build -w @bdmakers/agent-data-parser",
    "build:renderers": "npm run build -w @bdmakers/agent-data-parser-renderers",
    "build:react-native": "npm run build -w @bdmakers/agent-data-parser-react-native",
    "build:web": "npm run build -w @bdmakers/agent-data-parser-web",
    "clean": "rm -rf packages/*/dist",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit -p packages/renderers/tsconfig.json && tsc --noEmit -p packages/core/tsconfig.json && tsc --noEmit -p packages/react-native/tsconfig.json && tsc --noEmit -p packages/web/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build",
    "publish": "npm run build && npm publish -w @bdmakers/agent-data-parser-renderers && npm publish -w @bdmakers/agent-data-parser && npm publish -w @bdmakers/agent-data-parser-react-native && npm publish -w @bdmakers/agent-data-parser-web",
    "publish:renderers": "npm run build:renderers && npm publish -w @bdmakers/agent-data-parser-renderers",
    "publish:core": "npm run build:core && npm publish -w @bdmakers/agent-data-parser",
    "publish:react-native": "npm run build:react-native && npm publish -w @bdmakers/agent-data-parser-react-native",
    "publish:web": "npm run build:web && npm publish -w @bdmakers/agent-data-parser-web"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bd-makers/agent-data-parser.git"
  },
  "author": "Aijinet",
  "license": "MIT"
}
